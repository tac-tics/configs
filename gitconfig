[user]
    name = Michael Maloney
    # email = tac@tac-tics.net

[core]
    editor = nvim

[alias]
    graph = log --graph --decorate
    undo = reset --soft HEAD~
    prs = log --merges --grep='Merge pull request'
    commitsof = !git log "${1}...${1}^1"
    recent = !git-recent

[apply]
    whitespace = nowarn

[push]
    default = current

[pull]
    rebase = true

[credential]
    helper = manager
